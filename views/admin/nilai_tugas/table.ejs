<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">Data Nilai Penugasan Peserta</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">

            <table id="example1" class="table table-bordered" >
               <thead style="text-align: center;">
        <tr>
          <th rowspan="2">No.</th>
          <th rowspan="2">Nama</th>
          <% if (materi.length > 0) { %>
            
            <% materi.forEach((item) => { %>

              <th colspan="3"><%= item.materi %></th>
            
            <% }) %>
          <% } %>
          <th rowspan="2">Total</th>
        </tr>
        <tr>
          <% if (materi.length > 0) { %>
            <% materi.forEach(() => { %>
              <th>Pengetahuan</th>
              <th>Pemahaman</th>
              <th>Analisis</th>
            <% }) %>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% if (KognitifPeserta.length > 0) { %>
          <% KognitifPeserta.forEach((peserta, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= peserta.pesertaName %></td>
              <% peserta.nilaiMateri.forEach((materi) => { %>
                <td><%= materi.Pengetahuan %></td>
                <td><%= materi.Pemahaman %></td>
                <td><%= materi.Analisis %></td>
              <% }) %>
              <td><%= peserta.Jumlah %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="<%= 2 + materi.length * 3 %>" style="text-align: center;">Data tidak tersedia</td>
          </tr>
        <% } %>
      </tbody>
        </table>
    </div>
    </div>
    <!-- /.card-body -->
</div>