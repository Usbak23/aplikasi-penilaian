                                                </select>
                                            </div>
                                            <div>
                                                <label for="bobotNilai">Masukan Bobot Nilai</label>
                                                <input type="number" name="bobotNilai" class="form-control"
                                                    id="bobotNilai" placeholder="Masukan Bobot Nilai" required>
                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary">Simpan</button>
                                            </div>
                                    </form>
                                </div>

                            </div>
