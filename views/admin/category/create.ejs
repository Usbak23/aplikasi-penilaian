                                                <label for="name">Nama Materi</label>
                                                <select name="name" id="nameCategory" class="form-control" required>
                                                  <option value="">Pilih Nilai Kategori</option>
                                                    <option value="Kognitif">Kognitif</option>
                                                    <option value="Psikomotorik">Psikomotorik</option>
