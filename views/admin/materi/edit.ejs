<%- include('../../partial/header.ejs') %>
    <%- include('../../partial/sidebar.ejs') %>
        <%- include('../../partial/navbar.ejs') %>
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="h3 mb-2 text-gray-800">Materi Training</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item"><a href="/materi">Materi</a></li>
                                    <li class="breadcrumb-item active"></a>Ubah</li>
                                </ol>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h2 class="h3 mb-2 text-gray-800">Form Ubah Materi "<%= materi.materi %>"</h2>

                                    </div>
                                    <!-- /.card-header -->
                                    <!-- form start -->
                                    <form action="/materi/edit/<%= materi._id %>?_method=PUT" method="POST">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <div>
                                                    <label for="materi">Masukan Nama Materi</label>
                                                    <input type="text" value="<%= materi.materi %>" name="materi"
                                                        class="form-control" id="materi"
                                                        placeholder="Masukan Nama Materi" required>
                                                </div>
                                                <div>
                                                    <label for="judulMateri">Masukan Judul Materi</label>
                                                    <input type="text" value="<%= materi.judulMateri %>"
                                                        name="judulMateri" class="form-control" id="judulMateri"
                                                        placeholder="Masukan Nama Materi" required>
                                                </div>
                                                <div>
                                                    <label for="narasumber">Masukan Nama Narasumber</label>
                                                    <input type="text" value="<%= materi.narasumber %>"
                                                        name="narasumber" class="form-control" id="narasumber"
                                                        placeholder="Masukan Nama Materi" required>
                                                </div>

                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary">Simpan</button>
                                            </div>
                                    </form>
                                </div>

                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>

            <%- include('../../partial/footer.ejs') %>
                <%- include('../../partial/js.ejs') %>